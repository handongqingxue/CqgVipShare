<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.cqgVipShare.dao.LeaseRecordMapper">
 	<select id="getLRDetailById" resultType="com.cqgVipShare.entity.LeaseRecord">
 		select tc.`no` scNo,tc.name scName,tc.shareMoney,md.shopName,md.shopAddress,md.logo shopLogo from lease_record r left join transfer_card tc on r.scId=tc.id left join merchant md on tc.shopId=md.id where r.id=#{id}
 	</select>
 	<insert id="addLeaseRecord" parameterType="com.cqgVipShare.entity.LeaseRecord">
 		insert into lease_record
 		<trim prefix="(" suffix=")" suffixOverrides=",">
 			<if test="scId!=null">
 				scId,
 			</if>
 			<if test="kzOpenId!=null">
 				kzOpenId,
 			</if>
 			<if test="zrzOpenId!=null">
 				zrzOpenId,
 			</if>
 			<if test="phone!=null">
 				phone,
 			</if>
 				createTime
 		</trim>
 		values
 		<trim prefix="(" suffix=")" suffixOverrides=",">
 			<if test="scId!=null">
 				#{scId},
 			</if>
 			<if test="kzOpenId!=null">
 				#{kzOpenId},
 			</if>
 			<if test="zrzOpenId!=null">
 				#{zrzOpenId},
 			</if>
 			<if test="phone!=null">
 				#{phone},
 			</if>
 				now()
 		</trim>
 	</insert>
 </mapper>